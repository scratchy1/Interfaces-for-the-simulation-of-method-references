package palindromFilter;

public class PalindromFilter2 implements FilterPredicate<String> {
    @Override
    public boolean isPalindrom(String candidate) {
        for (int i = 0; i < candidate.length(); i++) {
            if (candidate.charAt(i) != candidate.charAt((candidate.length() - i - 1)))
                return false;
        }
        return true;
    }
}
//korrekt, aber eigentlich bräuchte man nur bis zu Hälfte von candidate.length zu vergleichen.
